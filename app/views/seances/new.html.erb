        $('#seance_keyword').prop('disabled', false);
      } else {
        $('#genre-input').hide();
        $('#keyword-input').show();
        $('#seance_genre').prop('disabled', false);
      }
    }


    toggleInputs();


    $('input[name="seance[search_type]"]').change(function () {
